<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <civ class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismis="alert" aria-hidden="true"&times;</button>
       <%= content_tag :div, msg, id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
